<h1>Recipes</h1>
<table>
  <tr>
    <td>Title</td>
    <td>Serving(person)</td>
    <td>Time(mins)</td>
    <td>Action</td>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= link_to "#{recipe.title}", recipe_path(recipe) %> </td>
      <td><%= recipe.portion  %> </td>
      <td><%= recipe.time %> </td>
      <td><%= link_to "edit", edit_recipe_path(recipe) %> </td>
      <td><%= link_to "delete", recipe_path(recipe), method: :delete, data:{confirm: "Are you sure?"} %> </td>
    </tr>
  <% end %>
</table>
<%= link_to "Create Recipe", new_recipe_path %>
